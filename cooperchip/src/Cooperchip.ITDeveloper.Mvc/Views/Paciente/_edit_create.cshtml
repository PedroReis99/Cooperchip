@model Cooperchip.ITDeveloper.Domain.Models.Paciente

<div class="form-group">
    <label asp-for="Nome" class="control-label"></label>
    <input asp-for="Nome" class="form-control" />
    <span asp-validation-for="Nome" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="DataNascimento" class="control-label"></label>
    <input asp-for="DataNascimento" class="form-control" />
    <span asp-validation-for="DataNascimento" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="DataInternacao" class="control-label"></label>
    <input asp-for="DataInternacao" class="form-control" />
    <span asp-validation-for="DataInternacao" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Email" class="control-label"></label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-group">
    <div class="checkbox">
        <label>
            <input asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
        </label>
    </div>
</div>
<div class="form-group">
    <label asp-for="Cpf" class="control-label"></label>
    <input asp-for="Cpf" class="form-control" />
    <span asp-validation-for="Cpf" class="text-danger"></span>
</div>

<!--Editado para aceitar os Enums-->
<div class="form-group">
    <label asp-for="TipoPaciente" class="control-label"></label>
    <select asp-for="TipoPaciente"
            asp-items="Html.GetEnumSelectList<Cooperchip.ITDeveloper.Domain.Enums.TipoPaciente>()"
            class="form-control">
        <option selected="selected" value="">Selecione uma opção</option>
    </select>
    <span asp-validation-for="TipoPaciente" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Sexo" class="control-label"></label>
    <select asp-for="Sexo"
            asp-items="Html.GetEnumSelectList<Cooperchip.ITDeveloper.Domain.Enums.Sexo>()"
            class="form-control">
        <option selected="selected" value="">Selecione uma opção</option>
    </select>
    <span asp-validation-for="Sexo" class="text-danger"></span>
</div>
<!--Fim da edição-->

<!--Adicionando Estado do paciente-->
<div class="form-group">
    <label asp-for="EstadoPacienteId" class="control-label"></label>
    <select asp-for="EstadoPacienteId"
            asp-items="@ViewBag.EstadoPaciente"
            class="form-control">
        <option selected="selected" value="">Situação do paciente</option>
    </select>
    <span asp-validation-for="EstadoPacienteId" class="text-danger"></span>
</div>
<!--Fim da adição-->

<div class="form-group">
    <label asp-for="Rg" class="control-label"></label>
    <input asp-for="Rg" class="form-control" />
    <span asp-validation-for="Rg" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="RgOrgão" class="control-label"></label>
    <input asp-for="RgOrgão" class="form-control" />
    <span asp-validation-for="RgOrgão" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="RgEmissao" class="control-label"></label>
    <input asp-for="RgEmissao" class="form-control" />
    <span asp-validation-for="RgEmissao" class="text-danger"></span>
</div>