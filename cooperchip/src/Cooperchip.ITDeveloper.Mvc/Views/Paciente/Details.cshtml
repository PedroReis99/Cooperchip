

@{
    ViewData["Title"] = "Detalhes Paciente";
}

<div class="row">
    <div class="panel panel-heading">
        <h3>Detalhes do Pacientes</h3>
    </div>

    <div class="panel panel-body">

        <div>
            <partial name="_delete_details" />
        </div>
        <div>
