@model Cooperchip.ITDeveloper.Domain.Models.Paciente

@{
    ViewData["Title"] = "Excluir Paciente";
}

<h2>Delete</h2>

<h3>Tem certeza que deseja excluir o paciente?</h3>
<div>

    <partial name="_delete_details" />
    
    <form asp-controller="Paciente" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-controller="Paciente" asp-action="Index" class="btn btn-info">Voltar para a lista</a>
    </form>
</div>
