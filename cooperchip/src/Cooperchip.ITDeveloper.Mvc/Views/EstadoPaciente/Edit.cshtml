              subtitulo="Edição Estado dos Pacientes"></vc:cabecalho>

<div class="panel panel-default panel-controls">
    <div class="panel panel-heading">
        <h3>Edição Estado Pacientes</h3>
    </div>
    <div class="panel panel-body">
        <div class="col-md-4">
